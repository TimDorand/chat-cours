<!doctype html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Socket.IO chat</title>

    <link rel="stylesheet" href="/dist/css/bulma.css">
    <link rel="stylesheet" href="/dist/css/style.css">
</head>
<body>

<section class="section">
    <div class="container is-fluid">
        <nav class="navbar is-transparent">
            <div class="navbar-brand">
                <a class="navbar-item" href="https://bulma.io">
                    <img
                        src="https://bulma.io/images/bulma-logo.png"
                        alt="ChatOh : the real time chat"
                        width="112"
                        height="28">
                </a>
                <div class="navbar-burger burger" data-target="navbarExampleTransparentExample">
                    <span></span>
                    <span></span>
                    <span></span>
                </div>
            </div>

            <div id="navbarExampleTransparentExample" class="navbar-menu">
                <div class="navbar-start">
                    <a class="navbar-item" href="/">
                        Home
                    </a>
                </div>

                <div class="navbar-end">
                    <div class="navbar-item">

                    </div>
                </div>
            </div>
        </nav>

        <div class="columns">
            <div class="column">
                <aside>
                    <div class="rooms is-12"></div>
                    <br>

                    <div class="new_room">
                        <div class="field">
                            <div class="control">
                                <input class="input room_name_input" type="text" name="room_name" autocomplete="off"
                                       placeholder="Your message">
                            </div>
                        </div>

                        <div class="field">
                            <div class="control is-">
                                <button type="submit" class="button is-primary add_room">+ Add new room</button>
                            </div>
                        </div>
                    </div>
                </aside>
            </div>
            <div class="column is-half">
                <div class="column">
                    <ul id="messages"></ul>
                    <div id="tipping"></div>
                </div>

                <div class="column">
                    <form action="">
                        <div class="field has-addons">
                            <div class="control is-expanded">
                                <input class="input" id="m" type="text"  autocomplete="off" placeholder="Your message">
                            </div>
                            <div class="control">
                                <button type="submit" class="button is-primary">SEND</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
            <div class="column">
                <h4 class="title is-4">Connected Users</h4>
                <ul id="users"></ul>
            </div>
        </div>
    </div>
</section>

<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
<script defer src="https://use.fontawesome.com/releases/v5.0.6/js/all.js"></script>

<script src="/socket.io/socket.io.js"></script>
<script src="/assets/js/socket.js"></script>
</body>
</html>